<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.heh.homeband.activities.SearchGroupeFrag">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rl1"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="119dp"
                android:layout_height="66dp"
                android:text="@string/title_activity_search_style"
                android:layout_marginLeft="35dp"
                />

            <Spinner
                android:id="@+id/spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="46dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rl2">

            <EditText
                android:id="@+id/etCp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignBaseline="@+id/tvAdresse"
                android:layout_alignBottom="@+id/tvAdresse"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:layout_toLeftOf="@+id/btnLocalisationEvents"
                android:layout_toStartOf="@+id/btnLocalisationEvents" />

            <TextView
                android:id="@+id/tvAdresse"
                android:layout_width="150dp"
                android:layout_height="66dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="12dp"
                android:text="Adresse" />

            <ImageButton
                android:id="@+id/btnLocalisationEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/etCp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                app:srcCompat="@drawable/ic_place_black_24dp" />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl4"

            android:layout_below="@+id/rl3"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/etKilometre"
                android:layout_alignBottom="@+id/etKilometre"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="38dp"
                android:layout_marginStart="38dp"
                android:text="@string/title_activity_search_distance" />

            <EditText
                android:id="@+id/etKilometre"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


        <Button
            android:id="@+id/btnRechercheGroupe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="68dp"
            android:background="@color/hbRed"
            android:gravity="center"
            android:text="@string/title_activity_search_button"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

</FrameLayout>
