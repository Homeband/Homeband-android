<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <!-- Les CardView possèdent des attributs supplémentaires dont
         - cardBackgroundColor
         - cardElevation pour l'élévation (donc aussi l'ombre)
         - cardCornerRadius pour arrondir les angles
     -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Les CardView agissent comme des FrameLayout,
         pour avoir une organisation verticale nous devons
         donc rajouter un LinearLayout -->


        <TextView
            android:id="@+id/tvUtilisateur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:background="?android:selectableItemBackground"
            android:layout_toRightOf="@id/imgGroup"
            android:fontFamily="sans-serif"
            android:textColor="#333"
            android:textSize="18sp"
            tools:text="Saovers" />
        <TextView
            android:id="@+id/tvDateAvis"
            android:layout_width="match_parent"
            android:layout_below="@id/tvUtilisateur"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            tools:text="25/01/2018"
            android:fontFamily="sans-serif"
            android:textColor="#333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDateAvis"
            android:layout_marginTop="10dp"
            tools:text="Lorem Ipsumjfeuhfuiezifjzeijfizejufizjefijezifjoooooooooooooooooooooooooooooooooooooo"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>